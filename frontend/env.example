# Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# Backend API URL (for production)
# REACT_APP_API_URL=https://api.yourdomain.com

# Smart Contract Addresses (Sepolia Testnet)
REACT_APP_DONATION_TRACKER_ADDRESS=
REACT_APP_IPFS_VERIFIER_ADDRESS=
REACT_APP_DISASTER_ORACLE_ADDRESS=

# Network Configuration
REACT_APP_CHAIN_ID=11155111
REACT_APP_CHAIN_NAME=Sepolia
REACT_APP_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# IPFS Gateway
REACT_APP_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Analytics (optional)
# REACT_APP_GA_TRACKING_ID=

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_WEB3=true
