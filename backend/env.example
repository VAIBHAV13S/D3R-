# Backend Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/d3r

# Database Pool Configuration (optional, defaults shown)
PG_POOL_MAX=20                    # Maximum number of clients in the pool
PG_POOL_MIN=2                     # Minimum number of clients in the pool
PG_IDLE_TIMEOUT=30000             # How long a client can be idle before being removed (ms)
PG_CONNECTION_TIMEOUT=2000        # How long to wait for a connection (ms)
PG_STATEMENT_TIMEOUT=30000        # Maximum query execution time (ms)
PG_QUERY_TIMEOUT=30000            # Query timeout (ms)
PG_APP_NAME=d3r-backend           # Application name for monitoring

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-in-production
JWT_EXPIRY=7d

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# IPFS/Pinata Configuration
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# Blockchain Configuration
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Contract Addresses (Sepolia Testnet)
DONATION_TRACKER_ADDRESS=
IPFS_VERIFIER_ADDRESS=
DISASTER_ORACLE_ADDRESS=

# Etherscan
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY

# Admin Configuration
ADMIN_KEY=your-admin-secret-key-for-milestone-approval

# Optional: Logging
LOG_LEVEL=info

# Optional: Redis (for production rate limiting and sessions)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: Monitoring
# SENTRY_DSN=
